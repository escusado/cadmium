<% //Conf

   //colors
   var colors = {
      first  : '#ed0700',
      second : '#F7C21A',
      third  : '#93C763',
      fourth : '#1296ff',
      fifth  : '#7db9e8',

      bodyBg    : '#eeeeee',
      wrapperBg : '#fdfdfd',

      bodyText  : '#333333',

      h1   : '#424242',
      desc : '#969696'
   };

   //fonts
   var fonts = {
	   /* Trebuchet-based sans serif stack */
       body : '"Segoe UI", Candara, "Bitstream Vera Sans", "DejaVu Sans", "Trebuchet MS", Verdana, "Verdana Ref", sans-serif',
       h1   : '"Montserrat", sans-serif'
   };

   //sizes
   var sizes = {
       wrapper : 660,

       h1 : 48,
       h2 : 24,
       h3 : 16,

       p : 14
   };

%>

/******************************************** Theme */
body {
    color            : <%= colors.bodyText %>;
    background-color : <%= colors.bodyBg %>;
    font-family      : <%= fonts.body %>;
    font-size        : 100%;
}

.top-line{
	width: 100%;
	height: 3px;
	background-color: #456;

    background: linear-gradient(to right,  <%= colors.first %> 20%,<%= colors.second %> 21%,<%= colors.second %> 40%,<%= colors.third %> 41%,<%= colors.third %> 60%,<%= colors.fourth %> 61%,<%= colors.fourth %> 80%,<%= colors.fifth %> 81%); /* W3C */
	box-shadow: inset 0 1px 2px rgba(0,0,0,0.5), 0 0 0 1px rgba(255,255,255,.9);
}

.wrapper {
	width  : <%= sizes.wrapper %>px;
	padding: 20px;
	margin : auto;
	background-color: <%= colors.wrapperBg %>;
}

a {
	color : <%= colors.first %>;
	font-weight: bold;
}

/******************************************* Text */
h1{
    text-align: left;
    position: relative;
}

h1:before{
    position: absolute;
    bottom : 0;
    left : 0;
    height: 3px;
    width : 100%;
    content: ' ';
    background-color: <%= colors.first %>;
}

h2{
    text-align: left;
    position: relative;
}

h2:before{
    position: absolute;
    bottom : 0;
    left : 0;
    height: 2px;
    width : 100%;
    content: ' ';
    background-color: <%= colors.second %>;
}

/********************************************* header */
.header {
	padding-top   : 50px;
	margin-bottom : 50px;

	font-family   : <%= colors.h1 %>;
}

.header a{
    text-decoration : none;
}

.tm-icon {
    display : block;
    margin  : auto;
}

.name{
    margin-top  : 20px;
    font-size   : <%= sizes.h1 %>px;
    
    text-align  : center;
	font-weight : bold;
	color       : <%= colors.h1 %>;
}

.name span{
    font-size : <%= sizes.h2 %>px;

    color     : <%= colors.first %>;
}

.description {
	font-size: <%= sizes.h3 %>px;

    text-align  : center;
    font-weight: bold;
	color: <%= colors.desc %>;
}

/********************************************** intro */

.get-code{
    display: block;
    
    text-align: center;
    text-decoration: none;
}

.get-code-button{
    background-color : #f26166;
    width: 210px;
}

/********************************************** title */

.title {
	font-size: 24px;
  margin-top: 32px;
	/*font-weight: bold;*/
}

.title.h1{
	font-family : 'Montserrat', sans-serif;
	font-size: 32px;
	font-weight: bold;
  margin-top: 32px;
}

.title.first{
	border-bottom: 2px solid #3366ff;
}

.title.second{
	border-bottom: 2px solid #ff3366;
}

.title.third{
	border-bottom: 2px solid #ff6633;
}

.title.fourth{
	border-bottom: 2px solid #93C763;
}

.title.fifth{
	border-bottom: 2px solid #ffcc33;
}

/********************************* .sandbox */

.or{
    text-align: center;
}

.try-button{
	background-color: #ffcc33;
	margin: auto;
	width: 210px;
	text-align: center;
	left: 219px;
}

.try-button span:before{
	content : "Try it right here!";
}

.try-button span.hide:before{
	content : "Hide sandbox";
}

.sandbox.collapsed{
	max-height:0px;
	opacity: 0;
    margin: 0;
    padding: 0 10px 0 10px;
}

.sandbox {
	margin-top: 20px;
	margin-bottom: 20px;
	background-color: #fff;
	border: 1px solid rgba(0,0,0,.1);
	border-radius: 3px;
	padding: 10px 10px 25px;

	overflow: hidden;
	max-height:auto;
	opacity: 1;
	
	transition: max-height 1s, opacity 1s, margin 1s, padding 1s;
}

/***************************************** Code box */

.code-highlight {
	position        : relative;
}

.code-highlight code{
	border-radius   : 5px;	
}
/* Copy Button */
.code-copy{
	position : absolute;
	top : 5px;
	right : 5px;

	background-color : <%= colors.second %>;
}
.code-copy .icon-copy {	margin-left: 4px; }

