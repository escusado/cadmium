<% //Conf

   //colors
   var colors = {
      first  : '#ff3366',
      second : '#3366ff',
      third  : '#93C763',
      fourth : '#ffcc33',
      fifth  : '#7db9e8',

      bodyBg    : '#eeeeee',
      wrapperBg : '#fdfdfd',

      bodyText  : '#333333',

      h1   : '#424242',
      desc : '#969696'
   };

   //fonts
   var fonts = {
	   /* Trebuchet-based sans serif stack */
       body : '"Segoe UI", Candara, "Bitstream Vera Sans", "DejaVu Sans", "Trebuchet MS", Verdana, "Verdana Ref", sans-serif',
       h1   : '"Montserrat", sans-serif'
   };

   //sizes
   var sizes = {
       wrapper : 660,

       h1 : 48,
       h2 : 24,
       h3 : 16
   };

%>

body {
	color            : <%= colors.bodyText %>;
    background-color : <%= colors.bodyBg %>;
    font-family      : <%= fonts.body %>;
}

/******************************************** document */
.top-line{
	width: 100%;
	height: 3px;
	background-color: #456;

    background: linear-gradient(to right,  <%= colors.first %> 20%,<%= colors.second %> 21%,<%= colors.second %> 40%,<%= colors.third %> 41%,<%= colors.third %> 60%,<%= colors.fourth %> 61%,<%= colors.fourth %> 80%,<%= colors.fifth %> 81%); /* W3C */
	box-shadow: inset 0 1px 2px rgba(0,0,0,0.5), 0 0 0 1px rgba(255,255,255,.9);
}

.wrapper {
	width  : <%= sizes.wrapper %>px;
	padding: 20px;
	margin : auto;
	background-color: <%= colors.wrapperBg %>;
}

/********************************************* header */

.header {
	padding-top   : 50px;
	margin-bottom : 15px;

	font-family   : 'Montserrat', sans-serif;
}

.header a{
    text-decoration : none;
}

.tm-icon {
    display : block;
    margin  : auto;
}

.name{
    margin-top  : 20px;
    font-size   : <%= sizes.h1 %>px;
    
    text-align  : center;
	font-weight : bold;
	color       : <%= colors.h1 %>;
}

.name span{
    font-size : <%= sizes.h2 %>px;

    color     : <%= colors.first %>;
}

.description {
	font-size: <%= sizes.h3 %>px;

    text-align  : center;
    font-weight: bold;
	color: <%= colors.desc %>;
}

/********************************************** intro */

.get-code{
    display: block;
    
    text-align: center;
    text-decoration: none;
}

.get-code-button{
    background-color : #f26166;
    width: 210px;
}

/********************************************** title */

.title {
	font-size: 24px;
  margin-top: 32px;
	/*font-weight: bold;*/
}

.title.h1{
	font-family : 'Montserrat', sans-serif;
	font-size: 32px;
	font-weight: bold;
  margin-top: 32px;
}

.title.first{
	border-bottom: 2px solid #3366ff;
}

.title.second{
	border-bottom: 2px solid #ff3366;
}

.title.third{
	border-bottom: 2px solid #ff6633;
}

.title.fourth{
	border-bottom: 2px solid #93C763;
}

.title.fifth{
	border-bottom: 2px solid #ffcc33;
}

/********************************* .sandbox */

.or{
    text-align: center;
}

.try-button{
	background-color: #ffcc33;
	margin: auto;
	width: 210px;
	text-align: center;
	left: 219px;
}

.try-button span:before{
	content : "Try it right here!";
}

.try-button span.hide:before{
	content : "Hide sandbox";
}

.sandbox.collapsed{
	max-height:0px;
	opacity: 0;
    margin: 0;
    padding: 0 10px 0 10px;
}

.sandbox {
	margin-top: 20px;
	margin-bottom: 20px;
	background-color: #fff;
	border: 1px solid rgba(0,0,0,.1);
	border-radius: 3px;
	padding: 10px 10px 25px;

	overflow: hidden;
	max-height:auto;
	opacity: 1;
	
	transition: max-height 1s, opacity 1s, margin 1s, padding 1s;
}


.code{
	font-family: 'Courier New';
	width: 615px;
	padding: 10px;
	height: 210px;
	text-align: left;
	font-size: 14px;
	resize:vertical;
	margin-bottom: 20px;
	border-radius: 0 0 3px 3px;
	border: 1px solid rgba(0,0,0,.1);
}

.highlighted-code.round {
	position: relative;
}

.highlighted-code.round pre{
	border-radius: 3px;
}

.highlighted-code pre{
	font-family: 'Courier New';
	border-radius: 3px 3px 0 0;
	width: 617px;
}

.result pre{
	margin-top: 5px;
	border-radius: 3px;
}

.compile-example{
    display: none;
}

.run-button{
	position: absolute;
	right: 15px;
	top : 15px;
	font-family : 'Montserrat', sans-serif;
	background-color: #93C763;
}

.footer {
	padding: 20px;
	margin-top: 20px;
	color: #ddd;
	background-color: #333;
	border-radius: 3px;
	text-align: center;
	font-size: 12px;
}

a {
	color : #f26166;
	font-weight: bold;
}

.unit h1 {
  margin-top: 64px;
}


/************************** Neon */
.stdlib{
	margin: 0;
	padding: 0;
}

.stdlib li{
	list-style: none;
}

.stdicon{
	width: 20%
}
.stdtext{
	width: 80%
}

.lib-name{
	font-family : 'Montserrat', sans-serif;
	font-size: 20px;
	font-weight: bold;
	padding: 0;
	margin : 0;
}

.lib-name span {
	font-size: 18px;
	color: #f26166;
}

.fleft{
	float: left;
}

.fright{
	float: right;
}

.clearfix{
	clear: both;
}