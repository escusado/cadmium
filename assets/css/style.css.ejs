<% //Conf

   //colors
   var colors = {
      first  : '#669933',
      second : '#ffcc00',
      third  : '#93C763',
      fourth : '#1296ff',
      fifth  : '#ED0700',

      bodyBg    : '#eeeeee',
      wrapperBg : '#fdfdfd',

      bodyText  : '#333333',

      h1   : '#424242',
      desc : '#969696'
   };

   //fonts
   var fonts = {
	   /* Trebuchet-based sans serif stack */
       body : '"Segoe UI", Candara, "Bitstream Vera Sans", "DejaVu Sans", "Trebuchet MS", Verdana, "Verdana Ref", sans-serif',
       h1   : '"Montserrat", sans-serif'
   };

   //sizes
   var sizes = {
       wrapper : 660,

       h1 : 48,
       h2 : 24,
       h3 : 16,

       p : 14
   };

%>

/******************************************** Theme */
body {
    font-size        : 100%;
    
    font-family      : <%= fonts.body %>;
    color            : <%= colors.bodyText %>;
    background-color : <%= colors.bodyBg %>;
}

.top-line{
	width: 100%;
	height: 3px;

	background-color: #456;
    background: linear-gradient(to right,  <%= colors.first %> 20%,<%= colors.second %> 21%,<%= colors.second %> 40%,<%= colors.third %> 41%,<%= colors.third %> 60%,<%= colors.fourth %> 61%,<%= colors.fourth %> 80%,<%= colors.fifth %> 81%); /* W3C */
	box-shadow: inset 0 1px 2px rgba(0,0,0,0.5), 0 0 0 1px rgba(255,255,255,.9);
}

.wrapper {
	width   : <%= sizes.wrapper %>px;
	padding : 20px;
	margin  : auto;
	
	background-color : <%= colors.wrapperBg %>;
	border-radius    : 0 0 3px 3px;
}

a {
	font-weight : bold;
	color       : <%= colors.first %>;
}

/******************************************* Text */
h1{
	margin-top : 50px;
    position   : relative;
    text-align : left;
}

h1:before{
    height   : 3px;
    width    : 100%;
    position : absolute;
    bottom   : -5px;
    left     : 0;
    content  : ' ';

    background-color: <%= colors.first %>;
}

h2{
    text-align : left;
    position   : relative;
}

h2:before{
    height   : 2px;
    width    : 100%;
    position : absolute;
    bottom   : -5px;
    left     : 0;
    content: ' ';

    background-color: <%= colors.second %>;
}

h3{
    text-align : left;
    position   : relative;
}

h3:before{
    position : absolute;
    bottom   : -4px;
    left     : 0;
    height   : 2px;
    width    : 100%;
    content  : ' ';

    background-color: <%= colors.third %>;
}

/********************************************* header */
.header {
	padding-top   : 50px;

	font-family   : <%= colors.h1 %>;
}

.header a{
    text-decoration : none;
}

.tm-icon {
    display : block;
    margin  : auto;
}

.name{
    margin-top  : 20px;
    font-size   : <%= sizes.h1 %>px;
    
    text-align  : center;
	font-weight : bold;
	color       : <%= colors.h1 %>;
}

.name span{
    font-size : <%= sizes.h2 %>px;

    color     : <%= colors.second %>;
}

.description {
	font-size : <%= sizes.h3 %>px;

    text-align  : center;
    font-weight : bold;
	color       : <%= colors.desc %>;
}

/********************************************** intro */

.get-code{
    display: block;
    
    text-align: center;
    text-decoration: none;
}

.get-code-button{
    height : 23px;
    width  : 250px;
    
    background-color : <%= colors.second %>;
}

.get-code-button span {
	white-space : nowrap;
}

.icon-github {
	font-size : 20px;
}


/***************************************** Code box */

.code-highlight {
	position        : relative;
}

.code-highlight code{
	font-size     : 12px;
	
	border-radius : 5px;	
}

/* Copy Button */
.code-copy{
	position : absolute;
	top : 5px;
	right : 5px;

	background-color : <%= colors.second %>;
}

.code-copy .icon-copy {
	margin-left: 4px;
}

/************************** Footer */
.footer{
	height     : 15px;
	padding    : 5px;
	margin-top : 20px;
	font-size  : 12px;
	
	color            : #ddd;
	background-color : #333;
}

.cd-disclamer{
	float     : right;
	font-size : 10px;
	
	color : rgba(255,255,255,.5);
}

.cd-disclamer a{
	color           : rgba(255,255,255,.8);
	text-decoration : none;
}